{
  "name": "nbalive",
  "displayName": "NBA Live",
  "description": "View NBA Games and track player stats live in your taskbar!",
  "publisher": "fromfuchsia",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ericbh22/nba-live-vscode"

  },
  "activationEvents": [],
  "main": "./dist/extension.js",
"contributes": {

    "views": {
      "explorer": [
        {
          "id": "NBAGrid",
          "name": "NBA Live",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "nbalive.addPlayer",
        "title": "NBA Add Active Player"
      },
      {
        "command": "nbalive.removePlayer",
        "title": "NBA Remove Player"
      },
      {
        "command": "nbalive.chooseGame",
        "title": "NBA Choose Game"
      },
      {
        "command": "nbalive.addPlayerUI",
        "title": "Add Active Player"
      },
      {
        "command": "nbalive.removePlayerUI",
        "title": "Remove Player"
      },
      {
        "command": "nbalive.toggleLakersTheme",
        "title": "NBA Switch to Lakers Theme"
      },
      {
        "command": "nbalive.restoreDefaultTheme",
        "title": "NBA Restore Default Theme"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nbalive.addPlayerUI",
          "title": "Add Player",
          "group": "navigation",
          "when": "view==NBAGrid"
        },
        {
          "command": "nbalive.removePlayerUI",
          "title": "Remove Player",
          "group": "navigation",
          "when": "view==NBAGrid"
        } 
      ]
      }
    },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.8.4"
  }
}
